extends ../layout/index


block contenido
    .py-10 
        h1.text-4xl.my-10.font-extrabold.text-center Bienes
            span.font-normal Raices
        h2.text-center.text-2xl.font-bold= pagina
        if errores
            div(class="w-full max-w-md mx-auto my-10")
                each error in errores 
                    p.bg-red-600.text-white.text-xs.text-center.p-2.mb-1.font-bold.uppercase= error.msg 


        .mt-8.mx-auto.max-w-md
            .bg-white.py-8.px-4.shadow
                form.space-y-5(method="POST" action="/auth/login")
                    input(type="hidden" name="_csrf" value=csrfToken)
                    div 
                        label.block.text-sm.uppercase.text-gray-500.mb-2.font-bold(for="email") email de registro
                        input#email.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-400(
                            placeholder="Tu Email"
                            type="email"
                            name="email"
                        )
                    div 
                        label.block.text-sm.uppercase.text-gray-500.mb-2.font-bold(for="password") password
                        input#password.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-400(
                            placeholder="Tu Password"
                            type="password"
                            name="password"
                        )
                    
                    .flex.items-center.justify-between
                        a.text-gray-500.text-xs(href="/auth/registro") ¿No tienes una cuenta? Crea una cuenta
                        a.text-gray-500.text-xs(href="/auth/recuperar") Olvidé mi contraseña
                    
                    input(
                        class=" w-full bg-indigo-600 hover:bg-indigo-500 text-white font-bold py-3 cursor-pointer",
                        type="submit" 
                        value="Iniciar Sesión"
                    )